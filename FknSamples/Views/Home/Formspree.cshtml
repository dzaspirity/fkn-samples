
<script type="text/javascript">
    var i = 0;
    function _replytoChanged() {
        console.log('//formspree.io/' + $('#_replyto').val());
        $('#formspree').attr('action', '//formspree.io/' + $('#_replyto').val());
    }
    function _SubjectChanged() {
        console.log($('#setSubject').val());
        $('#_subject').val($('#setSubject').val());
    }

    function addField() {
        i++;
        var field = 'field' + i;
        var html = '<div class="form-group"><label class="col-sm-2 control-label" for="' + field + '">' + field + '</label><div class="col-sm-10"><input type="text" class="form-control" name="' + field + '" placeholder="' + field + '" ></div></div>';
        $("#formspree").prepend(html);
    }
</script>

<fieldset>
    <legend><a href="http://formspree.io/" target="_blank">formspree.io</a></legend>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="_replyto">Email To</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="_replyto" id="_replyto" placeholder="Email To" onchange="_replytoChanged()">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="setSubject">Subject</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="setSubject" placeholder="Subject" onchange="_SubjectChanged()" value="Test mail">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-default" onclick="addField()">Add Field To Send</button>
        </div>
    </div>
</fieldset>
<fieldset>
    <legend>Form</legend>
    <form class="form-horizontal" id="formspree" method="POST">
        <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="_replyto" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="hidden" name="_subject" id="_subject" value="Test mail" />
                <input type="text" name="_gotcha" style="display: none" />
                <input type="hidden" name="_next" value="@Url.Action("Formspree")" />
                <button type="submit" class="btn btn-default">Send</button>
            </div>
        </div>
    </form>
</fieldset>